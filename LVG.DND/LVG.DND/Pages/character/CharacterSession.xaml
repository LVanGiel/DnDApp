<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LVG.DND.Pages.character.CharacterSession"
             xmlns:views="clr-namespace:LVG.DND.Views"
             Shell.NavBarIsVisible = "False">
    <VerticalStackLayout>
        <views:TitleBar  Margin="0,0,0,20"/>
        <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
            <views:StatButton x:Name="ArmorClassBtn" ButtonTitle="Armor Class"/><!--weapons and armor-->
            <views:StatButton x:Name="SpeedBtn" ButtonTitle="Speed"/>
            <views:StatButton x:Name="HealthBtn" ButtonTitle="Health"/>
        </HorizontalStackLayout>
        <Button Text="Start Combat" VerticalOptions="Center" Clicked="CombatButton_Clicked"/>
        <Button Text="Skill Check" VerticalOptions="Center"/>
        <views:StatButton VerticalOptions="Center" x:Name="ItemsBtn" ButtonTitle="Items"/>
        <Button Text="Spells" VerticalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>