<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LVG.DND.Pages.character.CharacterSession"
             xmlns:views="clr-namespace:LVG.DND.Views">
    <VerticalStackLayout>
        <views:TitleBar  Margin="0,0,0,20"/>
        <HorizontalStackLayout>
            <views:StatButton x:Name="ArmorClassBtn" ButtonTitle="Armor Class"/>
            <Label Text="Speed"/>
            <Label Text="Health"/><!--current/max + temporary-->
        </HorizontalStackLayout>
        <Button Text="Start Combat" VerticalOptions="Center"/>
        <Button Text="Edit Health" VerticalOptions="Center"/>
        <Button Text="Skill Check" VerticalOptions="Center"/>
        <Button Text="Items" VerticalOptions="Center"/>
        <Button Text="Equipment" VerticalOptions="Center"/><!--weapons and armor-->
        <Button Text="Spells" VerticalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>