<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LVG.DND.Pages.CharacterViewPage"
             Title="CharacterViewPage"
             xmlns:viewmodel="clr-namespace:LVG.DND.ViewModel"
             xmlns:views="clr-namespace:LVG.DND.Views"
             xmlns:viewsgeneral="clr-namespace:LVG.DND.Views.general">
    <Shell.TitleView>
        <Grid>
            <Label Text="characterview" HorizontalOptions="Center" VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>
    <ScrollView VerticalOptions="FillAndExpand" x:Name="CharacterViewPageScroll" VerticalScrollBarVisibility="Always">
        <VerticalStackLayout x:Name="CharViewStack"></VerticalStackLayout>
    </ScrollView>
</ContentPage>