<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LVG.DND.Pages.CharacterPage"
             Title="CharacterPage">
    <VerticalStackLayout>
        <StackLayout>
            <Button Background="#000000ff" 
                    BorderColor="#000000ff" 
                    Text="Start Session" 
                    FontSize="20" WidthRequest="250"
                    Padding="0, 0, 0, 0"/>
            <Button Background="#000000ff" 
                    BorderColor="#000000ff" 
                    Text="Level up" 
                    FontSize="20" WidthRequest="250" 
                    Padding="0, 0, 0, 0"/>
            <Button Background="#000000ff"
                    BorderColor="#000000ff"
                    Text="View Charactersheet"
                    FontSize="20" WidthRequest="250"
                    Padding="0, 0, 0, 0"/>
            <Button Background="#000000ff"
                    BorderColor="#000000ff"
                    Text="Edit Character"
                    FontSize="20" WidthRequest="250"
                    Padding="0, 0, 0, 0"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>