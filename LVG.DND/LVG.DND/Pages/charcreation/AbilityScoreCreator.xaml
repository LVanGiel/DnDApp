<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LVG.DND.Pages.charcreation.AbilityScoreCreator">
    <ScrollView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <VerticalStackLayout>
            <VerticalStackLayout x:Name="ASStack">
                <Button Text="Roll for ability scores" x:Name="RollOrNotBtn" Clicked="RollOrNotBtn_Clicked"></Button>
            </VerticalStackLayout>
            <Button Text="Next" Clicked="Button_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
