<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LVG.DND.Views.SkillView">
    <VerticalStackLayout x:Name="SkillViewStack">
        <Label
            Text="{Binding Name}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Margin="10,10,10,10" WidthRequest="50" BackgroundColor="White" x:Name="txtLevel" Text="{Binding BonusText}" IsEnabled="False"></Entry>
    </VerticalStackLayout>
</ContentView>
