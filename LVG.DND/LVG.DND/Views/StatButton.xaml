<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LVG.DND.Views.StatButton"
             x:Name="this">
    <Grid RowDefinitions="100,30" WidthRequest="100" BindingContext="{x:Reference this}">
        <Image Grid.Row="0" Source="{Binding ButtonImageUrl}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
        <Label Grid.Row="0" Text="{Binding ButtonStat}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
        <Label Grid.Row="1" Text="{Binding ButtonTitle}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
        <Button x:Name="ThisClicked" Grid.Row="0" Grid.RowSpan="2" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="Transparent" BorderColor="Transparent"/>
    </Grid>
</ContentView>
