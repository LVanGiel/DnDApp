<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="LVG.DND.Views.EditHealthPopup"
               Size="500, 500">
    <ScrollView VerticalOptions="FillAndExpand" VerticalScrollBarVisibility="Always">
        <VerticalStackLayout>
            <Entry Text="" x:Name="txtName" WidthRequest="100"/>
            <Entry Text="" x:Name="txtDescription" WidthRequest="100"/>
            <Button Text="Save" Clicked="Button_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</toolkit:Popup>
