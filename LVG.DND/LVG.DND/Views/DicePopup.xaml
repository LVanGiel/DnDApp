        <VerticalStackLayout x:Name="DicePopupPrimairyStack" VerticalOptions="FillAndExpand">
            <VerticalStackLayout x:Name="DicePopupStack" VerticalOptions="FillAndExpand"></VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</toolkit:Popup>
