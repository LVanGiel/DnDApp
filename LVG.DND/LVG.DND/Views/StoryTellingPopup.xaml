<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="LVG.DND.Views.StoryTellingPopup">
    <ScrollView>
        <VerticalStackLayout>
            <Button Text="Edit" Clicked="EditButton_Clicked" HorizontalOptions="End"/>
            <Label x:Name="Titletxt" FontSize="Large"/>
            <Entry x:Name="Contenttxt" TextColor="Black" IsEnabled="False"/>
            <Button x:Name="Savebtn" Text="Save" Clicked="SaveButton_Clicked" HorizontalOptions="End" IsVisible="False"/>
        </VerticalStackLayout>
    </ScrollView>
</toolkit:Popup>
