<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LVG.DND.Views.characterviews.CharacterSkillsAndAbilitiesView">
    <HorizontalStackLayout x:Name="SkillsAndAbilitiesViewStack">
        <ScrollView VerticalOptions="FillAndExpand" VerticalScrollBarVisibility="Always">
            <VerticalStackLayout x:Name="AbilityScoresStack">
                <Label Text="Ability Scores"></Label>
            </VerticalStackLayout>
        </ScrollView>
        <ScrollView HeightRequest="900" VerticalOptions="FillAndExpand" VerticalScrollBarVisibility="Always">
            <VerticalStackLayout x:Name="SkillsStack">
                <Label Text="Skills"></Label>
            </VerticalStackLayout>
        </ScrollView>
    </HorizontalStackLayout>
</ContentView>
