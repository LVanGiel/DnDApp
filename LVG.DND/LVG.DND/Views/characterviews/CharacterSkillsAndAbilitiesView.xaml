            </VerticalStackLayout>


            <VerticalStackLayout>
                <Label Text="{Binding Character.Skills.SleightOfHand.Name}" VerticalOptions="Center" HorizontalOptions="Center" />
                <Entry Margin="10,10,10,10" WidthRequest="50" BackgroundColor="White" x:Name="txtSleightOfHandBonus" Text="{Binding Character.Skills.SleightOfHand.BonusText}" IsEnabled="False"></Entry>
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="{Binding Character.Skills.Stealth.Name}" VerticalOptions="Center" HorizontalOptions="Center" />
                <Entry Margin="10,10,10,10" WidthRequest="50" BackgroundColor="White" x:Name="txtStealthBonus" Text="{Binding Character.Skills.Stealth.BonusText}" IsEnabled="False"></Entry>
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="{Binding Character.Skills.Survival.Name}" VerticalOptions="Center" HorizontalOptions="Center" />
                <Entry Margin="10,10,10,10" WidthRequest="50" BackgroundColor="White" x:Name="txtSurvivalBonus" Text="{Binding Character.Skills.Survival.BonusText}" IsEnabled="False"></Entry>
            </VerticalStackLayout>

        </VerticalStackLayout>
        </Grid>
</ContentView>
