            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="{Binding Character.Skills.Intimidation.Name}" VerticalOptions="Center" HorizontalOptions="Center" />
                <Entry Margin="10,10,10,10" WidthRequest="50" BackgroundColor="White" x:Name="txtIntimidationBonus" Text="{Binding Character.Skills.Intimidation.BonusText}" IsEnabled="False"></Entry>
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="{Binding Character.Skills.Investigation.Name}" VerticalOptions="Center" HorizontalOptions="Center" />
                <Entry Margin="10,10,10,10" WidthRequest="50" BackgroundColor="White" x:Name="txtInvestigationBonus" Text="{Binding Character.Skills.Investigation.BonusText}" IsEnabled="False"></Entry>
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="{Binding Character.Skills.Medicine.Name}" VerticalOptions="Center" HorizontalOptions="Center" />
                <Entry Margin="10,10,10,10" WidthRequest="50" BackgroundColor="White" x:Name="txtMedicineBonus" Text="{Binding Character.Skills.Medicine.BonusText}" IsEnabled="False"></Entry>
            </VerticalStackLayout>


            <VerticalStackLayout>
                <Label Text="{Binding Character.Skills.Nature.Name}" VerticalOptions="Center" HorizontalOptions="Center" />
                <Entry Margin="10,10,10,10" WidthRequest="50" BackgroundColor="White" x:Name="txtNatureBonus" Text="{Binding Character.Skills.Nature.BonusText}" IsEnabled="False"></Entry>
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="{Binding Character.Skills.Perception.Name}" VerticalOptions="Center" HorizontalOptions="Center" />
                <Entry Margin="10,10,10,10" WidthRequest="50" BackgroundColor="White" x:Name="txtPerceptionBonus" Text="{Binding Character.Skills.Perception.BonusText}" IsEnabled="False"></Entry>
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="{Binding Character.Skills.Performance.Name}" VerticalOptions="Center" HorizontalOptions="Center" />
                <Entry Margin="10,10,10,10" WidthRequest="50" BackgroundColor="White" x:Name="txtPerformanceBonus" Text="{Binding Character.Skills.Performance.BonusText}" IsEnabled="False"></Entry>
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="{Binding Character.Skills.Persuasion.Name}" VerticalOptions="Center" HorizontalOptions="Center" />
