<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LVG.DND.Views.characterviews.FeaturesAndTraitsView">
    <VerticalStackLayout>
        <Button Text="+" Clicked="AddButton_Clicked" WidthRequest="40" HorizontalOptions="End"/>
        <CollectionView x:Name="traitList" ItemsSource="{Binding Character.Traits}" >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <Entry Text="{Binding Name}" Grid.Column="0" IsEnabled="False" TextColor="Black" />
                            <Button Text="-" Clicked="RemoveButton_Clicked" Grid.Column="1"/>
                        </Grid>
                        <Editor TextColor="Black" Text="{Binding Description}" IsEnabled="False"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentView>
